@model Barabas.Models.Event
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create Event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white py-3 rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-calendar-plus"></i> Create New Event</h3>
        </div>

        <div class="card-body p-4">
            <form asp-action="Create" enctype="multipart/form-data" id="createEventForm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label fw-semibold">Event Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter event title" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Location" class="form-label fw-semibold">Location</label>
                        <input asp-for="Location" class="form-control" placeholder="e.g., Kyiv Concert Hall" />
                        <span asp-validation-for="Location" class="text-danger small"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label fw-semibold">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe the event..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Date" class="form-label fw-semibold">Date & Time</label>
                        <input asp-for="Date" type="datetime-local" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label fw-semibold">Ticket Price (₴)</label>
                        <input asp-for="Price" type="number" class="form-control" min="0" step="0.01" placeholder="0.00" />
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="EventCategoryId" class="form-label fw-semibold">Category</label>
                        <select asp-for="EventCategoryId" class="form-select"
                                asp-items="@(new SelectList(ViewBag.EventCategories, "Id", "Name"))">
                            <option value="">-- Select category --</option>
                        </select>
                        <span asp-validation-for="EventCategoryId" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label for="TicketCount" class="form-label fw-semibold">Number of Tickets</label>
                        <input type="number" id="TicketCount" name="TicketCount" class="form-control" min="1" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Image" class="form-label fw-semibold">Event Image</label>
                        <input type="file" asp-for="Image" class="form-control" id="ImageFile" name="ImageFile" accept="image/*" />
                        <small class="text-muted d-block mt-1">Allowed: jpg, png, gif. Max: 2 MB.</small>
                        <span asp-validation-for="Image" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 text-center">
                        <img id="previewImage" src="#" alt="Preview"
                             class="img-thumbnail mt-2 shadow-sm"
                             style="max-width: 250px; display: none;" />
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary px-5">
                        <i class="bi bi-check-circle"></i> Create Event
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        const imageInput = document.getElementById('ImageFile');
        const preview = document.getElementById('previewImage');

        imageInput.addEventListener('change', function () {
            const file = this.files[0];
            if (!file) {
                preview.style.display = 'none';
                return;
            }

            const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
            const maxSize = 2 * 1024 * 1024;

            if (!allowedTypes.includes(file.type)) {
                alert("Invalid file type. Allowed: JPG, PNG, GIF.");
                this.value = '';
                preview.style.display = 'none';
                return;
            }

            if (file.size > maxSize) {
                alert("File too large. Max size is 2 MB.");
                this.value = '';
                preview.style.display = 'none';
                return;
            }

            const reader = new FileReader();
            reader.onload = (e) => {
                preview.src = e.target.result;
                preview.style.display = 'block';
            };
            reader.readAsDataURL(file);
        });
    </script>
}

<style>
    body {
        background-color: #f5f7fb;
    }

    .card {
        border-radius: 20px;
        overflow: hidden;
    }

    .form-control, .form-select {
        border-radius: 10px;
        padding: 10px 12px;
    }

    label.form-label {
        color: #333;
    }

    button.btn-primary {
        background: linear-gradient(90deg, #007bff 0%, #0056d6 100%);
        border: none;
        border-radius: 30px;
        transition: all 0.3s ease;
    }

        button.btn-primary:hover {
            transform: scale(1.03);
            background: linear-gradient(90deg, #0056d6 0%, #003c9b 100%);
        }

    .btn-outline-secondary {
        border-radius: 30px;
    }
</style>
