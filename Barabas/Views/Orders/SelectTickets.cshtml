@model Barabas.Models.TicketSelectionViewModel

<h2 class="text-center mb-4">Select Tickets for @Model.EventName</h2>

<form asp-action="ProcessTicketSelection" method="post" class="ticket-selection-form mx-auto" style="max-width: 600px;">
    <input type="hidden" name="userId" value="@User.Identity.Name" />

    <div class="form-group mb-3">
        <label for="ticketDropdown" class="form-label">Available Seats</label>
        <select id="ticketDropdown" name="ticketId" class="form-select" required>
            <option value="" disabled selected>Select a seat</option>
            @for (var i = 0; i < Model.AvailableSeats.Count; i++)
            {
                <option value="@Model.AvailableTicketIds[i]">Seat @Model.AvailableSeats[i]</option>
            }
        </select>
    </div>

    <div class="text-center">
        <input type="submit" value="Buy Ticket" class="btn btn-success btn-lg" />
    </div>
</form>

<style>
    .ticket-selection-form {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #007bff;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
    }
</style>
