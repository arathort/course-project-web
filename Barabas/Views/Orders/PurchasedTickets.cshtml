@model List<Barabas.ViewModels.PurchasedTicketViewModel>

@{
    ViewData["Title"] = "My Tickets";

    var today = DateTime.Today;
    var upcoming = Model.Where(t => t.EventDate.Date > today).OrderBy(t => t.EventDate).ToList();
    var todayEvents = Model.Where(t => t.EventDate.Date == today).OrderBy(t => t.EventDate).ToList();
    var past = Model.Where(t => t.EventDate.Date < today).OrderByDescending(t => t.EventDate).ToList();
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">🎟 My Tickets</h1>
        <p class="text-muted">View all your upcoming, current, and past event tickets in one place.</p>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center mt-5">
            <img src="/images/empty-tickets.svg" alt="No tickets" style="width: 200px; opacity: 0.8;">
            <h4 class="mt-3 text-secondary">You haven’t purchased any tickets yet.</h4>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3 px-4">
                Browse Events
            </a>
        </div>
    }
    else
    {
        @if (upcoming.Any())
        {
            <h3 class="text-success fw-bold mb-3">🎉 Upcoming Events</h3>
            <div class="row mb-5">
                @foreach (var ticket in upcoming)
                {
                    @Html.Partial("_TicketCard", ticket)
                }
            </div>
        }

        @if (todayEvents.Any())
        {
            <h3 class="text-warning fw-bold mb-3">📅 Happening Today</h3>
            <div class="row mb-5">
                @foreach (var ticket in todayEvents)
                {
                    @Html.Partial("_TicketCard", ticket)
                }
            </div>
        }

        @if (past.Any())
        {
            <h3 class="text-muted fw-bold mb-3">🕰 Past Events</h3>
            <div class="row">
                @foreach (var ticket in past)
                {
                    @Html.Partial("_TicketCard", ticket)
                }
            </div>
        }

        <div class="text-end mt-5">
            <h4 class="fw-bold text-success">
                💵 Total Spent: @Model.Sum(t => t.Price).ToString("C")
            </h4>
        </div>
    }
</div>

<style>
    body {
        background-color: #f4f7fb;
    }

    h3 {
        border-left: 6px solid #007bff;
        padding-left: 10px;
        margin-top: 40px;
    }
</style>
