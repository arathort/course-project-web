@model Barabas.Models.Event

@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.Image" alt="@Model.Name" class="img-fluid" style="max-width: 100%;">
        </div>

        <div class="col-md-8">
            <h2>@Model.Name</h2>
            <p><strong>Дата:</strong> @Model.Date.ToString("dd MMMM yyyy, HH:mm")</p>

            <p><i class="fas fa-map-marker-alt"></i> @Model.Location</p>


            <div>
                <p><strong>Вартість:</strong> @Model.Price </p>
            </div>
            <a href="@Url.Action("SelectTickets", "Orders", new { eventId = Model.Id })" class="btn btn-primary">Buy Tickets</a>
        </div>
            <p>@Model.Description</p>
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Назад</a>
</div>
